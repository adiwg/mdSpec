        {{#bs-nav type="" justified=true class="sticky-top" as |nav|}}
          {{#nav.item}}
             {{#nav.link-to "index"}}Foo{{/nav.link-to}}
          {{/nav.item}}
          {{#nav.item}}
            {{#nav.link-to "application"}}Bar{{/nav.link-to}}
          {{/nav.item}}
        {{/bs-nav}}
        {{md-sidebar-list model=model}}
      </div>
    </nav>
    {{md-splitter "||" ".sidebar" class="d-none d-md-block"}}
    <main role="main" class="d-flex pt-3 px-4">
      {{outlet}}
    </main>
  {{!-- </div> --}}
