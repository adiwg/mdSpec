  {{#link-to "index" class="navbar-brand"}}{{fa-icon "pen-square"}} mdSpec{{/link-to}}
  {{navbar.toggle}}
  {{#navbar.content}}
    {{#navbar.nav class="mr-auto" as |nav|}}
      {{#nav.item}}{{#nav.link-to "application"}}Getting Started{{/nav.link-to}}{{/nav.item}}
      {{#nav.item}}{{#nav.link-to "index"}}Components{{/nav.link-to}}{{/nav.item}}
      {{#nav.item}}<a href="/api" class="nav-link">API</a>{{/nav.item}}
    {{/navbar.nav}}
    {{#navbar.nav as |nav|}}
      {{#nav.item class="visible-sm-block visible-xs-block"}}
        <a href="https://github.com/adiwg/mdSpec" class="nav-link" target="_blank" rel="noopener">{{fa-icon "github" prefix="fab"}}</a>
      {{/nav.item}}
    {{/navbar.nav}}
